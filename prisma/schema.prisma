generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  username      String?
  firstName     String?
  lastName      String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String
  gender        String?
  birthDate     DateTime?
  accounts      Account[]
  sessions      Session[]
  matieres      Matiere[]
  notes         Note[]
  files         File[]
  quizes       Quiz[]
  quizAttempts  QuizAttempt[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Matiere {
  id String @id @default(cuid())
  name String
  type String

  users User[]
  notes Note[]
  files File[]
  quizes Quiz[]
}

model Note {
  id String @id @default(cuid())
  userId String
  matiereId String
  note Float
  comment String?
  coefficient Int @default(1)

  date DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  matiere Matiere @relation(fields: [matiereId], references: [id], onDelete: Cascade)
}

model File {
  id        String   @id @default(cuid())
  userId    String
  matiereId String
  name      String
  url       String
  size      Int
  mimeType  String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  matiere Matiere @relation(fields: [matiereId], references: [id], onDelete: Cascade)

  @@index([userId, matiereId])
}

model Quiz {
  id          String   @id @default(cuid())
  userId      String
  matiereId   String
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isAIGenerated Boolean @default(false)

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  matiere     Matiere      @relation(fields: [matiereId], references: [id], onDelete: Cascade)
  questions   Question[]
  attempts    QuizAttempt[]

  @@index([userId, matiereId])
}

model Question {
  id          String   @id @default(cuid())
  quizId      String
  question    String
  type        String   @default("multiple-choice") // multiple-choice, true-false, short-answer
  order       Int
  points      Int      @default(1)

  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers     Answer[]

  @@index([quizId])
}

model Answer {
  id          String   @id @default(cuid())
  questionId  String
  text        String
  isCorrect   Boolean  @default(false)
  order       Int

  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([questionId])
}

model QuizAttempt {
  id          String   @id @default(cuid())
  quizId      String
  userId      String
  score       Float
  totalPoints Int
  answers     String   // JSON string of user answers
  completedAt DateTime @default(now())

  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([quizId, userId])
}